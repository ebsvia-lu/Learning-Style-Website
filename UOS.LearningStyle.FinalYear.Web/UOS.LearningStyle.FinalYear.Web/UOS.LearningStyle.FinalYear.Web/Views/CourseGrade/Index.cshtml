@model IEnumerable<UOS.LearningStyle.FinalYear.Domains.CourseGrade>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CourseGradeLayout.cshtml";
}

<h2>Course Grades</h2>
<br />

<p>
    <button class="btn btn-primary" onClick="location.href =' @Url.Action("Create", "CourseGrade")';return false;">Create New</button>

</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Credits)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Number)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Mark)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Credits)
    </td>
    <td>
        <button class="btn btn-warning" onClick="location.href =' @Url.Action("Edit", "CourseGrade", new { id = item.ID })';return false;">Edit</button>
        <button class="btn btn-info" onClick="location.href =' @Url.Action("Details", "CourseGrade", new { id = item.ID  })';return false;">Details</button>
        <button class="btn btn-danger" onClick="location.href =' @Url.Action("Delete", "CourseGrade", new { id = item.ID  })';return false;">Delete</button>
        @*@Html.ActionLink("Edit", "Edit", new { id=item.CourseID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CourseID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CourseID })*@
    </td>
</tr>
    }

</table>

<br />

<table class="table">
    <tr>
        <th>
            Total
        </th>
        <th>
            BasicAverage
        </th>
        <th>
            WeightedAverage
        </th>
    </tr>

    
        <tr>
            <td>
                @ViewBag.Total
            </td>
            <td>
                @ViewBag.BasicAverage
            </td>
            <td>
                @ViewBag.WeightedAverage
            </td>
        </tr>

</table>