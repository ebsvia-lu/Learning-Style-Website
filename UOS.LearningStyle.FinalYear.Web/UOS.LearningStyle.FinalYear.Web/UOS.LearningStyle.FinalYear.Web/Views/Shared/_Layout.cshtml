<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Learning Style Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Contents/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundless/scripts")
    @Scripts.Render("~/bundlesss/scripts")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("My Learning Style Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Course Grades", "Index", "CourseGrade")</li>
                    <li>@Html.ActionLink("Event Scheduling", "Index", "Event")</li>
                    <li>@Html.ActionLink("Gaming", "Index", "GamingPage")</li>
                    <li>@Html.ActionLink("Log out", "Logout", "Account")</li>
                </ul>
                <ul class="nav navbar-nav right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("Welcome, " + User.Identity.Name, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Learning Style</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
